// GUI stylies of the project
// For example, styles of the links, buttons and so on.



.button-block
    display block
    
    &_input
        max-width 365px
        display inline-block
        border-radius 50px
        margin-right 8px

        
    &--popup
        .button
            display inline-block
            max-width 270px
        .button-block_input
            max-width 290px
    
    

.button
    display inline-block
    background-image -moz-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    background-image -webkit-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    background-image -ms-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    min-width 268px
    max-height 60px
    font-size 14px
    line-height 1
    color #524210
    padding 25px 32px
    text-align center
    font-family fontb
    text-transform uppercase
    border-radius 50px
    cursor pointer
    
    
    
    
