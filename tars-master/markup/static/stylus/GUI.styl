// GUI stylies of the project
// For example, styles of the links, buttons and so on.



.button-block
    display block
    
    &_input
        width 365px
        display inline-block
        border-radius 50px
        margin-right 8px
        
        &--mobile-menu
            @media (max-width: 1200px)
                margin 5px 0
                display inline-block
                position relative
                margin 5 0 auto
                width 280px
                
            

        
    &--popup
        .button
            display inline-block
            max-width 270px
        .button-block_input
            max-width 290px
    
    

.button
    display inline-block
    background-image -moz-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    background-image -webkit-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    background-image -ms-linear-gradient( -57deg, rgb(254,200,37) 0%, rgb(254,170,37) 100%)
    min-width 268px
    max-height 60px
    font-size 14px
    line-height 1
    color #524210
    padding 25px 32px
    text-align center
    font-family fontb
    text-transform uppercase
    border-radius 50px
    cursor pointer
    
    @media (max-width: 1000px)
        font-size 9px
        padding 14px 18px
        min-width 130px !important
        min-height 35px
        
    @media (max-width: 700px)
        font-size 9px
        padding 8px 10px
        min-width 130px !important
        min-height 35px
    
    &--inline-submit
        display inline-block
        width auto
        border solid 0px 
    
    
    
    
