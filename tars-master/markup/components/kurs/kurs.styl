.kurs
    display block
    padding-top 105px
    @media (max-width: 600px)
        display none
    
    
    .content
        overflow hidden
    
    &__kurs-grid
        display block
        margin-left -10px
        margin-top 10px
        v = 100%
        width: "calc(%s + 20px)" % v
        min-height 500px
        
    &__item
        float left
        width 50%
        border-left solid 10px #f8f8f8
        border-right solid 10px #f8f8f8
        
        &_photo
            display block
            width 100%
            height auto
            
        &__content
            display block
            width 460px
            margin 0 auto
            position relative
            top -100px
            background #fff
            min-height 205px
            padding 32px
            margin-bottom: -60px;
            
            &_title
                font-size 34px
                line-height 34px
                font-family fonth
                margin-bottom 15px
                
            &_desc
                font-size 18px
                line-height 28px
                color #676767
                position relative
                margin-bottom 10px
                min-height -56px
                    
            &_reed-more
                position relative
                font-size 20px
                line-height 20px
                color colfirm
                display inline-block
                &:before
                    content '';
                    position absolute
                    display block
                    width 100%
                    height 1px
                    border-bottom dotted 1px colfirm
                    left 0px
                    bottom -2px
                    
                &:visited
                    color colfirm
                    
    &__button-block
        position relative
        text-align center
        margin-top 110px
        float left
        width 100%
        z-index 999
        top -68px
        @media (max-width: 600px)
            display none
            
        .button
            display inline-block
            font-size 18px
            text-transform none
            padding 18px 32px
            font-family fonttxt
            min-width 220px
            max-height 52px
            
                    
                
    