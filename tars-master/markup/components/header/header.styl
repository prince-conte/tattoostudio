h = 100px
.header
    position fixed
    top 0px
    left 0px
    height h
    width 100%
    background #fff
    z-index 9999
    
    &__content
        max-width 1300px
        min-width 280px
        margin 0 auto
        clearfix()
        
        
    &__logo-block
        display inline-table
        float left
        height h
        width 273px
        
        &_logo
            display block
            width 100%
            height auto
            
    &__navigate
        padding-left 90px
        float left
        height h
        display inline-table
        
        &__topmenu
            display block
            
            &__item
                display inline-block
                margin 0 16px
                &:first-child
                    margin-left 0px
                &:last-child
                    margin-right 0px
                    
                &:hover
                    .header__navigate__topmenu_link
                        color colfirm
                        &:before
                            border-bottom dotted 1px colfirm
                    
            &_link
                position relative
                display inline-block
                text-transform uppercase
                color #9a9a9a
                font-size 13px
                line-height 1
                m-speed(.4s)
                
                &:before
                    content '';
                    position absolute
                    display block
                    width 100%
                    height 1px
                    bottom -2px
                    left 0px
                    border-bottom dotted 1px #9a9a9a
                    m-speed(.4s)
        
