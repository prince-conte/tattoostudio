.comments
    position relative
    display block
    position relative
    margin-top -235px
    min-height 500px
    padding-top 105px
    @media (max-width: 800px)
        margin-top 0px
       
    .content
        overflow hidden


        
    &__comments-grid
        position relative
        display block
        margin-left -10px
        v = 100%
        width: "calc(%s + 20px)" % v
        
        &__item
            display inline-block
            width 50%
            border solid 10px transparent
            border-bottom solid 20px transparent
            min-height 250px 
            float left
            @media (max-width: 800px)
                width 100%



            
            &__body
                float left
                width 100%
                background #fff
                padding 30px 40px
                border-radius 5px
                background-color rgb(255, 255, 255)
                box-shadow 0px 12px 21px 0px rgba(168, 164, 179, 0.08)
                @media (max-width: 400px)
                    padding 0 15px
                
                &__title-block
                    display block
                    
                &_ava
                    display inline-block
                    size(135px,135px)
                    float left
                    overflow hidden
                    border-radius 50%
                    @media (max-width: 760px)
                        display block
                        width 100%
                        float none
                        height 135px
                        border-radius 0
                        text-align center
                        margin 30px 0
                    img
                        width 100%
                        height auto
                        
                        @media (max-width: 760px)
                            display inline-block
                            overflow hidden
                            border-radius 50%
                            size(135px,135px)
                            
                    
                &__rank
                    padding-left 35px
                    float left
                    display inline-block
                    @media (max-width: 760px)
                        display block
                        float none
                        padding-left 0px
                    &_title
                        font-family fontb
                        font-size 20px
                        line-height 28px
                        margin 6px 0
                        @media (max-width: 760px)
                            text-align center
                        
                    &_job
                        font-size 16px
                        line-height 28px
                        @media (max-width: 760px)
                            text-align center
                                               
                    &_country
                        font-size 16px
                        line-height 28px
                        margin-bottom 12px
                        color #676767
                        &:last-cild
                            margin-bottom 0px
                            
                        @media (max-width: 760px)
                            text-align center

                &_txt
                    font-size 16px
                    line-height 26px
                    color #676767
                    display block
                    margin 25px 0
                        
                        
                        
                
                
                   
