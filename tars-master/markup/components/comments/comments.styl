.comments
    position relative
    display block
    position relative
    top -135px
    min-height 500px
    
    .content
        overflow hidden
    

        
    &__comments-grid
        position relative
        display block
        margin-left -10px
        v = 100%
        width: "calc(%s + 20px)" % v
        
        &__item
            display inline-block
            width 50%
            border solid 10px transparent
            border-bottom solid 20px transparent
            min-height 250px 
            float left



            
            &__body
                float left
                width 100%
                background #fff
                padding 30px 40px
                border-radius 5px
                background-color rgb(255, 255, 255)
                box-shadow 0px 12px 21px 0px rgba(168, 164, 179, 0.08)
                
                &__title-block
                    display block
                    
                &_ava
                    display inline-block
                    size(135px,135px)
                    float left
                    overflow hidden
                    border-radius 50%
                    img
                        width 100%
                        height auto
                    
                &__rank
                    padding-left 35px
                    float left
                    display inline-block
                    &_title
                        font-family fontb
                        font-size 20px
                        line-height 28px
                        margin 6px 0
                        
                    &_job
                        font-size 16px
                        line-height 28px
                                               
                    &_country
                        font-size 16px
                        line-height 28px
                        margin-bottom 12px
                        color #676767
                        &:last-cild
                            margin-bottom 0px

                &_txt
                    font-size 16px
                    line-height 26px
                    color #676767
                    display block
                    margin-top 25px
                        
                        
                
                
                   
