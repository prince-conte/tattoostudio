.contacts
    position relative
    display block
    height 650px
    
    .content

        height 650px
        
    
    &_maps-block
        position absolute
        display block
        top 0px
        left 0px
        width 100%
        height 100%
        
    &__body
        position absolute
        display block
        height 495px
        width 485px
        background #fff
        border-radius 5px
        top 80px
        left 50%
        margin-left -525px
        padding 42px
        z-index 99
        cursor default
        
        &_contact-title
            color coltxt
            display block
            font-size: 54px
            line-height 60px
            font-family 'Conv_BERLINGSKESERIF-LT', sans-serif
            margin-bottom 28px
            text-align left
            
                
        &_contact-phone
            color coltxt
            display block
            font-size: 24px
            line-height 28px
            margin 20px 0 20px
            text-align left
            
        &_contact-mail
            font-size 16px
            line-height 28px
            color colfirm
            display inline-block
            position relative
            margin-bottom 8px
            &:before
                content ''
                position absolute
                display block
                width 100%
                height auto
                border-bottom dotted 1px  colfirm
                left 0px
                bottom 2px
                
        &__social
            display block
            margin-top 10px
            
            &_icon
                display inline-block
                size(40px, 40px)
                margin-right 18px
            
            
        