.contacts
    position relative
    display block
    height 650px
    @media screen and (max-width: 1200px) 
        min-height 650px
        height auto
        
    
    .content

        height 650px
        
    
    &_maps-block
        position absolute
        display block
        top 0px
        left 0px
        width 100%
        height 100%
        
    &__body
        position absolute
        display block
        height 495px
        width 485px
        background #fff
        border-radius 5px
        top 80px
        left 50%
        margin-left -525px
        padding 42px
        z-index 99
        cursor default
        @media (max-width: 1200px)
            position relative
            display block
            width 100%
            border-radius 0px
            height auto
            top 0px
            left 0px
            margin 0px
        @media (max-width: 400px)
            padding 0px 40px 42px
            
            
        
        &_contact-title
            color coltxt
            display block
            font-size: 54px
            line-height 60px
            font-family 'Conv_BERLINGSKESERIF-LT', sans-serif
            margin-bottom 28px
            text-align left
            @media (max-width: 400px)
                font-size 30px
                padding-top 42px
            
            &--tanks
                text-align center
                font-size 38px
                line-height 38px
                margin-bottom 25px
            
                
        &_contact-phone
            color coltxt
            display block
            font-size: 24px
            line-height 28px
            margin 20px 0 20px
            text-align left
            
            &--mobile
                font-size 18px
                line-height 18px
                margin-bottom 15px
                text-align center
                margin-top 70px
            
        &_contact-mail
            font-size 16px
            line-height 28px
            color colfirm
            display inline-block
            position relative
            margin-bottom 8px
            &:before
                content ''
                position absolute
                display block
                width 100%
                height auto
                border-bottom dotted 1px  colfirm
                left 0px
                bottom 2px
                
            &--mobile
                font-size 14px
                line-height 28px
                
                
        &__social
            display block
            margin-top 10px
            
            &_icon
                display inline-block
                size(40px, 40px)
                margin-right 18px
                @media (max-width: 400px)
                    size(32px, 32px)
                    margin-right 14px
                
    &__mapimage
        display none
        @media screen and (max-width: 400px)  
            width 100%
            height auto
            display block
            img
                width 100%
                height auto
                display block   
                
        &--mobile
            display none
            @media screen and (max-width: 1200px)  
                display block  
                @media screen and (max-width: 400px)  
                    display none
                img
                    width 100%
                    height auto
                    display block   
                           
@media screen and (max-width: 1200px)          
                
    .YMaps-layer-container
        display none !important
                   
    .YMaps-buttons
        display none !important
                        
    .YMaps-slider
        display none !important
            
        